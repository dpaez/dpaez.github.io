/**
 * dk spot style
 */

/** Fonts **/
//@import url(http://fonts.googleapis.com/css?family=Questrial)
//@import url(http://fonts.googleapis.com/css?family=Fjalla\+One)
@import url(http://fonts.googleapis.com/css?family=Anonymous\+Pro);

@font-face
  font-family "AmsterdamSuperstar"
  font-weight normal
  font-style normal
  src url(../fonts/amsterdam-superstar-webfont.eot?),
    url(../fonts/amsterdam-superstar-webfont.woff),
    url(../fonts/amsterdam-superstar-webfont.svg),
    url(../fonts/amsterdam-superstar-webfont.ttf)

/** COLORS **/

BACKGROUND = #e5e5e5
KAN = #2b2a2a
LINK = #316dd4
LINKNEGATIVE = #bc882f

/** General - Utils **/
*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  height: 100%

body
  height:100%
  min-height:100%
  margin-top: -21px
  background-color: BACKGROUND
  color: KAN
  overflow-x: hidden
  font-size: 100%
  font-family: 'Anonymous Pro', "Lucida Console", monospace;

.total-center
  position: relative
  margin-left: auto
  margin-right: auto
  top: 50%
  transform: translateY(-50%)

.middle
  position: relative
  margin-left: auto
  margin-right: auto

a
  text-decoration: none
  color: LINK
  font-weight: bold

#projects a:hover, #contact a:hover, #bio a:hover
  background-color: LINKNEGATIVE
  color: LINK
  font-weight: normal
  transition: 300ms ease

a:focus
  outline: 2px solid LINKNEGATIVE

p
  margin: 0
  padding: 0

canvas
  position: absolute
  z-index: 1

article:not(#landing)
  padding: 0

#bio section
  padding: 20px

article, section, div, h1, h2, p
  z-index: 10

h1, h2
  font-family: "AmsterdamSuperstar", "Lucida Console", Monaco, monospace

h3
  margin-top: 0

article h2
  letter-spacing: 5px
  width: 50%
  font-size: 3em
  margin: 0
  display: inline-block
  height: 2em
  padding: 20px
  line-height: 1

ul
  list-style: none
  padding: 0

li
  display: block
  padding: 10px 20px

li:nth-child(2n+1)
  background-color: KAN
  color: BACKGROUND

li:nth-child(2n)
  background-color: BACKGROUND
  color: NAV

/** Position **/

.wrap
  position: relative
  height: 100%

.full
  position: relative
  height: 100%
  width: 100%

footer
  display: table-row
  height: 1px
  bottom: 0
  text-align: center
  z-index: 10

.sections-links:before
  content: ' '
  position: absolute
  height: 380px
  top: -25px
  left: -60px
  display: inline-block
  border-top: 25px solid transparent
  border-right: 25px solid KAN
  border-bottom: 25px solid transparent

.sections-links:after
  content: ' '
  position: absolute
  height: 380px
  top: -25px
  right: -60px
  display: inline-block
  border-top: 25px solid transparent
  border-left: 25px solid KAN
  border-bottom: 25px solid transparent

.sections-links
  position: relative
  width: 70%
  height: 380px // 3 * 110 (.section-link) + 25 (border-top) + 25 (border-bottom)
  /*top: 30%
  transform: translateY(-50%)*/
  margin-top: 5em
  z-index: 10
  border-top: 25px solid transparent
  border-right: 25px solid KAN
  border-bottom: 25px solid transparent
  border-left: 25px solid KAN
  box-shadow: 35px 0px 25px -25px rgba(0, 0, 0, 0.45), -35px 0px 25px -25px rgba(0, 0, 0, 0.45);
  //box-shadow: 0 9px 0px 0px transparent, 0 -9px 0px 0px transparent, 12px 0 15px -4px rgba(43, 42, 42, 0.5), -12px 0 15px -4px rgba(43, 42, 42, 0.5)

/** Alignment **/

.title, .title > *
  z-index: 10

.title h1
  margin-top: 21px
  font-size: 3em
  margin-bottom: 0

.logo
  float: right
  right: 0
  margin:0
  display: inline-block
  font-family: "AmsterdamSuperstar", "Lucida Console", Monaco, monospace
  font-size: 2em
  width: 3em
  height: 2em
  color: #316dd4
  cursor: pointer
  opacity: 0.6
  transition: all 0.3s


.title h1, .title p
  text-align: center

.section-link
  background-color: transparent
  color: BACKGROUND
  vertical-align: middle
  z-index: 10
  transition: 200ms ease

.section-link:hover
  background-color: KAN
  color: BACKGROUND
  transition: 300ms ease

.section-link a
  color: KAN
  display: block
  width: 100%

.section-link a > *
  text-align: center

.section-link a:hover
  color: BACKGROUND
  transition: 300ms ease

.section-link span
  display: inline-block
  height: 110px
  width: 100%
  line-height: 110px
  font-size: 4em

#bio section p
  margin-bottom: 1em

/** Effects and animations **/

.lights
  opacity:1
  transition: all 300ms ease-out

.black-box
  background-color: KAN

.black-box span, .black-box a
  color: BACKGROUND

.white-box
  background-color: transparent

.white-box span, .white-box a
  color: KAN

.kan1
  position: relative
  display: inline-block
  height: 2em
  width: 47%
  background-color: KAN
  transition: all 0.3s


.none
  display: inline-block
  height: 2em
  width: 6%
  background-color: transparent
  z-index: 10
  transition: all 0.3s

.kan2
  display: inline-block
  height: 2em
  width: 100%
  background-color: KAN
  margin: 10px 0
  z-index: 10

.extendKan
  width: 50%

.removeNone
  width: 0

/*******************/
/** Media Queries **/
/*******************/

// Small devices
@media screen and (min-width:320px) and (max-width:480px)
  body
    font-size: 90%

  .logo
    display: none
    visibility: hidden

  article h2
    font-size: 1.5em

  .kan1, .kan2, .none
    height: 1em
    margin: 0

  #landing
    margin-bottom: 1em

  .sections-links
    height: 290px
    width: 100%
    margin-top: 0

  .section-link span
    height: 80px
    line-height: 80px
    font-size: 2em

  h3
    margin: 0

  p
    margin: 0
    padding: 0

  .sections-links:before, .sections-links:after
    display: none
    visibility: hidden


@media screen and (max-height:360px)
  .logo
    display: none
    visibility: hidden

  .sections-links
    height: 170px
    width: 100%

  .section-link span
    height: 40px
    line-height: 40px
    font-size: 2em

  .kan1, .kan2, .none
    height: 1em
    margin: 0

@media screen and (min-width:470px) and (max-width:750px)
  .logo
    display: none
    visibility: hidden

  .sections-links
    width: 100%
    margin-top: 0

  h3
    margin: 0

  p
    margin: 0
    padding: 0

  .sections-links:before, .sections-links:after
    display: none
    visibility: hidden

@media screen and (min-width:40em)
  section:not(.items), li h3, li p
    width: 38em
    text-align: justify
    margin-left: auto
    margin-right: auto


@media screen and (min-width:750px) and (max-width:900px)
  article:not(#landing)
    height: 100%

  section:not(.items), li > *
    text-align: justify
    padding: 0 20px

  .sections-links
    width: 100%

//@media screen and (min-width:901px) and (max-width:1350px) and (min-height:800px)
@media screen and (min-width:901px) and (max-width:1350px)
  article:not(#landing)
    height: 100%

  section:not(.items), li h3, li p
    width: 800px
    text-align: justify
    margin-left: auto
    margin-right: auto

  .sections-links
    width: 40%

//@media screen and (min-width:1351px) and (min-height:800px)
@media screen and (min-width:1351px)
  article:not(#landing)
    height: 100%

  section:not(.items), li h3, li p
    width: 800px
    text-align: justify
    margin-left: auto
    margin-right: auto

  .sections-links
    width: 30%
